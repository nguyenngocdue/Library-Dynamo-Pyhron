<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
        
    Title="CONTROLS XAML" 
    ResizeMode="NoResize" 
    ShowInTaskbar="True" 
    WindowStartupLocation="CenterScreen"
    Height="255" Width="494"
    Topmost="True">

    <Grid>
        <Label Content="ListView" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnOK" Content="OK" Click="fnBtnOk" HorizontalAlignment="Left" Margin="294,189,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnCancel" Content="Cancel" Click="fnBtnCancel" HorizontalAlignment="Left" Margin="402,189,0,0" VerticalAlignment="Top" Width="75"/>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Left" Height="21" Margin="130,74,0,0" VerticalAlignment="Top" Width="267" />
        <TextBlock x:Name="progressText" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,30" Text="{Binding Path=ProgressBarValue, StringFormat='{}{0}%'}"/>
    </Grid>
</Window>
