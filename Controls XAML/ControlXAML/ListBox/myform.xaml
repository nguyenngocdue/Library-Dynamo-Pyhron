<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
        
    Title="CONTROLS XAML" 
    ResizeMode="NoResize" 
    ShowInTaskbar="True" 
    WindowStartupLocation="CenterScreen"
    Height="253" Width="494"
    Topmost="True">

    <Grid>
        <Label Content="ListBox:" />
        <ListBox x:Name='lstBoxName' ItemsSource="{Binding data}" SelectionMode="Multiple" Margin="79,48,10,44" />
        <Button x:Name="btnOK" Content="OK" Click="fnBtnOk" HorizontalAlignment="Left" Margin="294,189,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnCancel" Content="Cancel" Click="fnBtnCancel" HorizontalAlignment="Left" Margin="402,189,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
