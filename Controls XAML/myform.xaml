<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
        
    Title="CONTROLS XAML" 
    ResizeMode="NoResize" 
    ShowInTaskbar="True" 
    WindowStartupLocation="CenterScreen"
    Height="245" Width="494"
    Topmost="True">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="379*"/>
            <ColumnDefinition Width="109*"/>
        </Grid.ColumnDefinitions>
        <Slider x:Name="sliderControl" HorizontalAlignment="Left" Margin="50,33,0,0" VerticalAlignment="Top" Width="319"/>
        <Button x:Name="btnOK" Content="OK" Click="fnBtnOk" HorizontalAlignment="Left" Margin="294,189,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnCancel" Content="Cancel" Click="fnBtnCancel" HorizontalAlignment="Left" Margin="23,189,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1"/>
        <Slider HorizontalAlignment="Left" Margin="50,33,0,0" VerticalAlignment="Top" Width="319"/>
    </Grid>
</Window>
